{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User Service",
  "main": "app.js",
  "scripts": {
    "build": "tsc --build",
    "dev": "nodemon --config nodemon.json src/app.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run build && npm run typeorm migration:run -- -d src/infrastructure/persistence/data-source.ts",
    "migration:run:dev": "npm run build && NODE_ENV=development npm run typeorm migration:run -- -d src/infrastructure/persistence/data-source.ts",
    "migration:revert": "npm run build && npm run typeorm migration:revert -- -d src/infrastructure/persistence/data-source.ts",
    "migration:revert:dev": "npm run build && NODE_ENV=development npm run typeorm migration:revert -- -d src/infrastructure/persistence/data-source.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Anton Rybalko",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/kafkajs": "^1.9.0",
    "@types/morgan": "^1.9.5",
    "bcrypt": "^5.1.1",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "tslog": "^4.9.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.17"
  }
}
